<section class="sign-up">
  <h1>Add dog</h1>
  <form class="dog-form form">
    <label for="dog-name"> Dog name </label>
    <input class="form-input" type="text" id="dog-name">

    <label for="dog-breed"> Dog breed </label>
    <input class="form-input" type="text" id="dog-breed">

    <label for="dog-temperament"> Dog temperament</label>
    <input class="form-input" type="text" id="dog-temperament">

    <button type="submit"> Submit </button>
  </form>
</section>


<section class="sign-up">
  <h1>Edit dog</h1>
  <form class="edit-dog-form form">
    <label for="edit-dog-id">Choose which dog to edit</label>
    <select class="form-input" name="dog-id" id="edit-dog-id">
      {{#each user.my-dogs as |dog|}}
      <option value="{{dog.id}}">{{dog.name}}</option>
      {{/each}}
    </select>

    <label for="edit-dog-name">Dog name</label>
    <input class="form-input" type="text" id="edit-dog-name">

    <label for="edit-dog-breed">Dog breed</label>
    <input class="form-input" type="text" id="edit-dog-breed">

    <label for="edit-dog-temperament">Dog temperament</label>
    <input class="form-input" type="text" id="edit-dog-temperament">

    <button type="submit"> Submit </button>
  </form>
</section>

<h2>My dogs:</h2>
<div class="dog-container">
  <ol>
    {{#each user.my-dogs as |dogs|}}
    <li>
      <ul>
        <li>
          name: {{dogs.name}}
        </li>
        <li>
          breed: {{dogs.breed}}
        </li>
        <li>
          temperament: {{dogs.temperament}}
        </li>
      </ul>
    </li>
    {{/each}}
  </ol>
</div>

</section>

<script defer src="/javascript/add-dog.js"></script>
<script defer src="/javascript/edit-dog.js"></script>