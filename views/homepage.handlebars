{{#if loggedIn}}

<div class="user-list-container">
  <ol>
    <h2>D.O.G.S users:</h2>
    {{#each users as |user|}}
    <li>
      <ul>
        <li>
          {{user.username}}
          <a href="/profiles/{{user.id}}"> dead link to public profile</a>
        </li>
      </ul>
    </li>
    {{/each}}
  </ol>
</div>


{{else}}
<!--Sign Up section-->
<section class="sign-up">
  <div>
    <!--Sign Up Form-->
    <form class="signup-form">
      <h3>Join the Pack!</h3>
      <br />
      <label for="email">Enter email address</label>
      <input type="email" placeholder="Email Address" name="email" id="email-signup" class="form-input" />

      <label for="name">Pick a username:</label>
      <input type="text" placeholder="username" name="username" id="username-signup" class="form-input" />

      <label for="password">Enter a password:</label>
      <input type="password" placeholder="at least 8 characters" name="password" id="password-signup" class="form-input" />

      <label for="city">Enter a city:</label>
      <input type="text" placeholder="city" name="city-signup" id="city-signup" class="form-input" />

      <button type="submit">
        Let's Go!
      </button>
    </form>
    <script defer src="/javascript/signup.js"></script>
  </div>
</section>
<!--end sign up section-->

